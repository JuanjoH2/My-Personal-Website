<section id="code">
    <div id="codeDiv" class="subtitleDiv">
        <h2>Code</h2>
        <button onclick="window.location.href='/code'"> </button>
    </div>

    <!-- Container for the binary rain effect. It sits behind the code box. -->
    <div id="binaryRainContainer"></div>
</section>

<script is:inline>
    // Wait for the entire DOM to load before trying to access elements
    document.addEventListener("DOMContentLoaded", () => {
        const codeSection = document.getElementById("code");
        const container = document.getElementById("binaryRainContainer");
        const codeDiv = document.getElementById("codeDiv");
        const codeSectionWidth = codeSection.clientWidth;
        var toggleRainMobile = true;
        // We no longer need the mobileBreakpoint constant here.

        if (!codeSection || !container || !codeDiv) {
            console.error("Required DOM elements not found for animation.");
            return;
        }

        let intervalId = null;
        const WORDS = ["1", "0"];
        const spawnRate = 50;

        // Function to create and drop a single binary character
        function spawnBinaryDrop() {
            const randomIndex = Math.floor(Math.random() * WORDS.length);
            const word = WORDS[randomIndex];
            const span = document.createElement("span");
            span.className = "binary-drop";
            span.textContent = word;

            const randomXStart = Math.random() * 100;
            // Use container height for fall distance to ensure it always falls completely out
            const fallDistanceVh = 150;
            const randomDuration = Math.random() * 3 + 2;
            const randomSize = Math.floor(Math.random() * 14) + 12;

            span.style.left = `${randomXStart}%`;
            span.style.fontSize = `${randomSize}px`;
            span.style.transitionDuration = `${randomDuration}s`;

            if (Math.random() < 0.1) {
                span.style.color = "#0091e1";
                span.style.opacity = "1";
            }

            container.appendChild(span);

            // Use rAF to ensure CSS transition is applied on the next frame
            requestAnimationFrame(() => {
                span.style.transform = `translateY(${fallDistanceVh}vh)`;
            });

            // Clean up the element after it finishes falling
            setTimeout(
                () => {
                    span.remove();
                },
                randomDuration * 1000 + 100,
            );
        }

        // Start the continuous rain animation
        function startRain() {
            if (intervalId !== null) return;
            // Prevent starting if the click/enter was on the button itself
            // This is primarily for the mobile tap scenario

            intervalId = setInterval(spawnBinaryDrop, spawnRate);
            codeDiv.classList.add("rain-active");
        }

        // Stop the rain animation
        function stopRain() {
            if (intervalId !== null) {
                clearInterval(intervalId);
                intervalId = null;
                // For mobile, we remove the listener that checks for clicks outside.
                if (codeSectionWidth < 600) {
                    document.removeEventListener("click", handleOutsideClick);
                    console.log("mobile: Removed outside click listener.");
                }
                codeDiv.classList.remove("rain-active");
            }
        }

        // --- Simplified Event Handlers ---

        if (codeSectionWidth >= 600) {
            // 1. MouseEnter/TouchStart triggers startRain
            codeDiv.addEventListener("mouseenter", () => {
                console.log("computer enter");
                startRain();
            });

            // 2. MouseLeave/TouchEnd triggers stopRain
            codeDiv.addEventListener("mouseleave", () => {
                console.log("computer leave");
                stopRain();
            });
        } else {
            if (!toggleRainMobile) {
                codeDiv.addEventListener("click", () => {
                    console.log("mobile end");
                    stopRain();
                });
                toggleRainMobile = true;
            } else {
                codeDiv.addEventListener("click", () => {
                    console.log("mobile start");
                    startRain();
                });
                toggleRainMobile = false;
            }
        }
    });
</script>

<style is:global>
    /*
     * LOCAL STYLES (is:global added to prevent Astro scoping, allowing JS-created elements to be styled)
     */
    #code {
        /* overflow: hidden is critical to hide the rain when it falls past the section boundary */
        overflow: hidden;
        position: relative;
    }

    #codeDiv {
        position: relative;
        z-index: 5;
        /* Ensure the area is responsive to touch */
        touch-action: manipulation;
    }

    #binaryRainContainer {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Ensure the container is behind the 'Code' box */
        z-index: 0;
        pointer-events: none; /* Allows clicks/touches to pass through to the element behind it */
    }

    /* ðŸ’¥ HIGHLY SPECIFIC SELECTOR ðŸ’¥ */
    #binaryRainContainer .binary-drop {
        position: absolute;
        z-index: 5;

        /* CRITICAL: Start 100% of its own height UP and OFF-SCREEN. */
        transform: translateY(-100%);

        /* Base styles */
        font-weight: bold;
        white-space: nowrap;
        color: rgba(255, 255, 255, 0.6);
        opacity: 0.8;

        /* Ensure the transition property is explicitly defined */
        transition:
            transform linear,
            color 0.5s ease-out;
    }
</style>
