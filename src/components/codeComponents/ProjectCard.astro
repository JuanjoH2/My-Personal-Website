---
export interface Project {
    slug: string;
    name: string;
    slogan: string;
    description: string;
    image: string;
    githubUrl: string;
    demoUrl: string;
}

interface Props {
    project: Project;
}

const { project } = Astro.props;
---

<a href={`/code/${project.slug}`} class="project-card-link">
    <div class="project-card">
        <img
            src={project.image}
            alt={`Image for ${project.name}`}
            loading="lazy"
        />
        <div class="card-info">
            <h3>{project.name}</h3>
            <p>{project.description}</p>
        </div>
    </div>
</a>

<style>
    .project-card-link {
        text-decoration: none;
        color: white;
        display: block;
        height: 100%; /* Important for grid alignment */
        transition: transform 0.3s ease;
    }
    .project-card-link:hover {
        transform: translateY(-8px);
    }
    .project-card {
        /* Square container styles, similar to your 'thoughts' card */
        border-radius: 16px;
        border: 1px solid white;
        background-color: black;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%; /* Ensures the card fills the grid cell */
    }

    .project-card img {
        width: 100%;
        /* Ensure the image maintains a square-like aspect ratio or fills its container */
        aspect-ratio: 16 / 9; /* Adjust this to match your desired square/rectangle ratio */
        object-fit: cover;
    }

    .card-info {
        padding: 16px;
        flex-grow: 1; /* Allows the info section to take up remaining space */
    }
    .card-info h3 {
        font-size: 1.5rem;
        margin-top: 0;
        margin-bottom: 8px;
    }
    .card-info p {
        font-size: 0.9rem;
        color: #aaa;
    }
</style>
