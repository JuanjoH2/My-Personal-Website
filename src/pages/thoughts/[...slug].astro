---
import { getCollection } from "astro:content";
import ThoughtLayout from "../../layouts/ThoughtLayout.astro";
import { format } from "date-fns";

// Dynamic routing
export async function getStaticPaths() {
    const thoughts = await getCollection("thoughts");
    return thoughts.map((thought) => {
        return {
            params: { slug: thought.slug },
            props: { thought },
        };
    });
}

const { thought } = Astro.props;
const { Content } = await thought.render();
const formattedDate = format(thought.data.pubDate, "MMM do, yyy");
---

<ThoughtLayout title={thought.data.title}>
    <article class="thought-article">
        <header class="article-header">
            <h1>{thought.data.title}</h1>

            <p class="author">By {thought.data.author}</p>
            <time datetime={thought.data.pubDate.toISOString()}>
                {formattedDate}
            </time>
        </header>

        <section class="article-content">
            <Content />
        </section>
    </article>
</ThoughtLayout>

<style>
    /*
     * ------------------------------
     * ARTICLE WRAPPER
     * ------------------------------
     */
    .thought-article {
        max-width: 800px;
        margin: 4rem auto;
        color: white;
    }

    /*
     * ------------------------------
     * HEADER
     * ------------------------------
     */
    .article-header {
        border-bottom: 1px solid white;
        padding-bottom: 1.5rem;
        margin-bottom: 3rem; /* Increased space before content */
        text-align: center; /* Center the title, date, and author */
    }

    .article-header h1 {
        font-size: 32px;
        margin-top: 0.5rem;
        line-height: 1.1;
        font-weight: 700;
    }

    .article-header time,
    .article-header .author {
        display: block;
        font-size: 0.9rem;
        color: #0091e1;
        margin-top: 0.25rem;
    }

    /*
     * ------------------------------
     * CONTENT BODY (The Markdown)
     * ------------------------------
     */
    .article-content {
        display: block;
        height: fit-content;
        line-height: 1.8;
        font-size: 1.15rem;
    }

    /* Headings within the article body */
    .article-content :global(h2) {
        font-size: 2rem;
        margin-top: 3.5rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        color: #0091e1;
        border-bottom: 1px solid #333;
    }

    /* Lists and quotes */
    .article-content :global(ul),
    .article-content :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .article-content :global(blockquote) {
        border-left: 4px solid #0091e1;
        margin: 2rem 0;
        padding: 0.5rem 1.5rem;
        background-color: #282c34; /* Lightly different background for contrast */
        font-style: italic;
    }

    /* Code blocks (important for technical posts) */
    .article-content :global(pre) {
        background-color: #0e0e0e;
        border: 1px solid #333;
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
        font-size: 0.95rem;
        margin: 2rem 0;
    }

    /* Mobile adjustments for the article */
    @media (max-width: 600px) {
        .thought-article {
            margin: 2rem auto;
            padding: 0 1rem;
        }
        .article-header h1 {
            font-size: 2rem;
        }
        .article-content {
            font-size: 1rem;
            line-height: 1.6;
        }
    }
</style>
