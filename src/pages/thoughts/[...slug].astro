---
import { getCollection } from "astro:content";
import ThoughtLayout from "../../layouts/ThoughtLayout.astro";
import { format } from "date-fns";

// Dynamic routing
export async function getStaticPaths() {
    const thoughts = await getCollection("thoughts");
    return thoughts.map((thought) => {
        return {
            params: { slug: thought.slug },
            props: { thought },
        };
    });
}

const { thought } = Astro.props;
const { Content } = await thought.render();
const formattedDate = format(thought.data.pubDate, "MMM do, yyy");
---

<ThoughtLayout title={thought.data.title}>
    <article class="thought-article">
        <header class="article-header">
            <h1>{thought.data.title}</h1>

            <p class="author">By {thought.data.author}</p>
            <time datetime={thought.data.pubDate.toISOString()}>
                {formattedDate}
            </time>
        </header>

        <section class="article-content">
            <Content />
        </section>
    </article>
</ThoughtLayout>

<style>
    /*
     * ------------------------------
     * ARTICLE WRAPPER
     * ------------------------------
     */
    .thought-article {
        max-width: 800px;
        margin: 4rem auto;
        color: white;
    }

    /*
     * ------------------------------
     * HEADER
     * ------------------------------
     */
    .article-header {
        border-bottom: 1px solid white;
        padding-bottom: 1.5rem;
        margin-bottom: 64px;
        text-align: center;
    }

    .article-header h1 {
        font-size: 64px;
        text-align: center;
    }

    .article-header time,
    .article-header .author {
        display: block;
        font-size: 16px;
    }

    /*
     * ------------------------------
     * CONTENT BODY (The Markdown)
     * ------------------------------
     */
    .article-content {
        display: block;
        height: fit-content;
        line-height: 1.8;
    }

    /* Headings within the article body */
    .article-content :global(h2) {
        font-size: 2rem;
        margin-top: 3.5rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        color: #0091e1;
        border-bottom: 1px solid #333;
    }

    /* Blockquotes styling */
    .article-content :global(blockquote) {
        border-left: 4px solid #0091e1;
        margin: 2rem 0;
        padding: 0.5rem 1.5rem;
        background-color: #282c34; /* Lightly different background for contrast */
        font-style: italic;
        border-radius: 8px;
    }

    /* Code blocks (important for technical posts) */
    .article-content :global(pre) {
        background-color: #0e0e0e;
        border: 1px solid #333;
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
        font-size: 0.95rem;
        margin: 2rem 0;
    }

    /* Images inside article content */
    .article-content :global(figure) {
        /* Align the entire figure block (image + caption) in the center */
        display: block;
        margin: 3rem auto;
        max-width: 60%; /* Match the max-width we set for the image */
        text-align: center;
    }
    .article-content :global(figcaption) {
        width: 100%;
        font-style: italic; /* Makes it italic */
        font-size: 16px;
        color: #aaa; /* Grayed out for subtlety */
    }
    .article-content :global(figure img) {
        width: 100%; /* Make the image fill the 50% max-width of the figure */
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border-radius: 8px;
    }

    /* Mobile adjustments for the article */
    @media (max-width: 600px) {
        .thought-article {
            margin: 2rem auto;
            padding: 0 1rem;
        }
        .article-header h1 {
            font-size: 2rem;
        }
        .article-content {
            font-size: 1rem;
            line-height: 1.6;
        }
    }
</style>
